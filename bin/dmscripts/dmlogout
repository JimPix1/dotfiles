#!/bin/sh

# A dmenu wrapper script for system functions.

case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nğŸ”ƒ reboot\nğŸ’» shutdown\nğŸ’¤ sleep\nâ™»ï¸ renew dwm\nğŸ“º display off"| dmenu -i -c -bw 2 -l 7 -h 30 -p 'Action:')" in
	'ğŸ”’ lock') slock xset dpms force off ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'â™»ï¸ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ’¤ sleep') slock systemctl --no-wall suspend ;;
	'ğŸ”ƒ reboot') systemctl --no-wall reboot ;;
	'ğŸ’» shutdown') systemctl --no-wall poweroff ;;
	'ğŸ“º display off') sleep 0.4; xset dpms force off ;;
	*) exit 1 ;;
esac
