#!/bin/sh

# Toggle the keyboard backlight on or off

file="/sys/class/leds/tpacpi::kbd_backlight/brightness"

if cat "$file" | grep -q "2"; then
        echo 0 > "$file"
	notify-send "ğŸ’» Keyboard Backlight" '<b><span foreground="red">âŒ Disabled!</span></b>'
else
	echo 2 > "$file"
	notify-send "ğŸ’» Keyboard Backlight" '<b><span foreground="green">âœ… Enabled!</span></b>'
fi
