#!/bin/sh

# Toggle the touchpad on or off

touchpad="SynPS/2 Synaptics TouchPad"

if xinput list-props "$touchpad" | grep "Device Enabled" | grep -q "1$"; then
	xinput disable "$touchpad"
	notify-send "ğŸ’» Touchpad" '<b><span foreground="red">âŒ Disabled!</span></b>'
else
	xinput enable "$touchpad"
	notify-send "ğŸ’» Touchpad" '<b><span foreground="green">âœ… Enabled!</span></b>'
fi
